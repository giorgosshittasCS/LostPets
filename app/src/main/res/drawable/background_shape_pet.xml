<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Corner radius, adjust as needed -->
        </shape>
    </item>

    <!-- Drop Shadow -->
    <item android:right="1dp" android:left="1dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Shadow color -->
            <corners android:radius="8dp" /> <!-- Corner radius, adjust as needed -->
        </shape>
    </item>

</layer-list>