<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.lostpets.LoginFragment"
        android:label="Login Fragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_LoginFragment_to_RegisterFragment"
            app:destination="@id/RegisterFragment" />
        <action
            android:id="@+id/action_LoginFragment_to_HomePageFragment"
            app:destination="@id/HomePageFragment" />
    </fragment>

    <fragment
        android:id="@+id/RegisterFragment"
        android:name="com.example.lostpets.RegisterFragment"
        android:label="Register Fragment"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_RegisterFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />

    </fragment>

    <fragment
        android:id="@+id/RecordFragment"
        android:name="com.example.lostpets.AddRecordFragment"
        android:label="Record Fragment"
        tools:layout="@layout/fragment_add_record">

        <action
            android:id="@+id/action_add_to_home"
            app:destination="@id/HomePageFragment" />

    </fragment>

    <fragment
        android:id="@+id/HomePageFragment"
        android:name="com.example.lostpets.HomePageFragment"
        android:label="HomePage Fragment"
        tools:layout="@layout/fragment_home_page">
        <action
            android:id="@+id/action_Home_to_Add"
            app:destination="@id/RecordFragment" />
        <action
            android:id="@+id/action_Home_to_Display"
            app:destination="@id/DisplayPetFragment" />


    </fragment>

    <fragment
        android:id="@+id/SettingsFragment"
        android:name="com.example.lostpets.SettingsFragment"
        android:label="Settings Fragment"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_Settings_to_UserProfileFragment"
            app:destination="@id/UserProfileFragment" />

        <!--notification action fragment-->

        <action
            android:id="@+id/action_Settings_to_ContactUs"
            app:destination="@id/ContactUsFragment" />

        <!--terms and policies action fragment-->

        <action
            android:id="@+id/action_Settings_to_Login"
            app:destination="@id/LoginFragment" />

        <action
            android:id="@+id/action_Settings_to_Home"
            app:destination="@id/HomePageFragment" />

    </fragment>


    <fragment
        android:id="@+id/ContactUsFragment"
        android:name="com.example.lostpets.ContactUsFragment"
        android:label="ContactUsFragment"
        tools:layout="@layout/fragment_contact_us">

        <action
            android:id="@+id/action_ContactUs_to_Home"
            app:destination="@id/HomePageFragment" />
    </fragment>

    <fragment
        android:id="@+id/UserProfileFragment"
        android:name="com.example.lostpets.UserProfileFragment"
        android:label="UserProfileFragment"
        tools:layout="@layout/fragment_user_profile">

        <action
            android:id="@+id/action_UserProfile_to_Home"
            app:destination="@id/HomePageFragment" />

    </fragment>
    <fragment
        android:id="@+id/DisplayPetFragment"
        android:name="com.example.lostpets.Display_Pet_Fragment"
        android:label=""
        tools:layout="@layout/fragment_display__pet_">


    </fragment>

    <fragment
        android:id="@+id/nav_add"
        android:name="com.example.lostpets.AddRecordFragment"
        android:label=""
        tools:layout="@layout/fragment_add_record">

    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.lostpets.HomePageFragment"
        android:label=""
        tools:layout="@layout/fragment_home_page">
    </fragment>
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.lostpets.SettingsFragment"
        android:label=""
        tools:layout="@layout/fragment_settings">
    </fragment>
    <fragment
        android:id="@+id/nav_like"
        android:name="com.example.lostpets.FavoriteFragment"
        android:label=""
        tools:layout="@layout/fragment_favorite">
    </fragment>
    <fragment
        android:id="@+id/nav_user"
        android:name="com.example.lostpets.UserProfileFragment"
        android:label=""
        tools:layout="@layout/fragment_user_profile">
    </fragment>
</navigation>