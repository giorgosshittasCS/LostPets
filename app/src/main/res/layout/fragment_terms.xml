<!-- res/layout/fragment_terms_and_policies.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F0EAD2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216">

        <TextView
            android:id="@+id/terms_and_policies_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Terms and Policies"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/terms_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="**1. Acceptance of Terms**"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/terms_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="By downloading, installing, or using this app, you agree to comply with and be bound by the following terms and conditions."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/terms_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text=" **2. User Conduct**"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/terms_21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text=" - Users must not engage in any unlawful or harmful activities."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/terms_22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - Users are responsible for maintaining the confidentiality of their account credentials."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/terms_title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="**3. Privacy Policy**"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/terms_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="- We respect your privacy and handle your data securely."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/terms_title_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="**4. Modifications to Terms**"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/terms_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text=" We reserve the right to update or modify these terms and policies at any time without prior notice."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/terms_title_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="**5. Contact Us**"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/terms_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="If you have any questions or concerns regarding these terms, please contact us at support@example.com."
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <include
            layout="@layout/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
